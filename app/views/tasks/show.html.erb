<h1><%= @task.title %>
</h1><button type="button" class="btn btn-primary"><%= link_to "Edit task", edit_task_path(@task) %></button>
<div class = container>
  <p><%= @task.details %></p>
</div>
<p><% if @task.completed %></p>
  <i class="far fa-check-square"></i>
  <% else %>
  <i class="far fa-square"></i>
<% end %>

<p><% if @task.completed %></p>
  <i class="far fa-check-square"></i><%= "This task is completed" %>
  <% else %>
  <i class="far fa-square"></i><%= "This task is completed" %>
<% end %>

<hr>
<div>
  <button type="button" class="btn btn-primary"><%= link_to "Back to List", tasks_path %></button>
</div>
